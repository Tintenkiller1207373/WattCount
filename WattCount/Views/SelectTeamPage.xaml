<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WattCount.Views.SelectTeamPage"
             Title="SelectTeamPage">

    <Grid RowDefinitions="2*, 1*, 2*, 3*" ColumnDefinitions=" 3*, 1*, 2*" >

        <Label Text="Team hinzufÃ¼gen"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Grid.ColumnSpan="100"
            TextColor="Red"
            FontSize="Large"
            Grid.Column="0"
            Grid.Row="0"
            />

        <Label
            Text="Teamnamen eingeben"
            HorizontalOptions="End"
            Margin="0,0,30,0"
            VerticalOptions="Center"
            Grid.Column="0"
            Grid.Row="1" />

        <Entry
            Text="{Binding TeamName}"
            Placeholder="Tulln"
            Grid.Row="1" Grid.Column="1"
             />

        <HorizontalStackLayout Grid.Row="2" Grid.Column="1" HorizontalOptions="Center" Margin="0,0,0,0" Grid.ColumnSpan="4">
            <Button Text="Team registrieren" VerticalOptions="Center" 
         Margin="0, 0, 10, 0" Command="{Binding SendCommand}" />
            

        </HorizontalStackLayout>





    </Grid>
   
</ContentPage>