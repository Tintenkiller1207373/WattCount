<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WattCount.Views.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Image
                Source="twg_with_border.png"
                HeightRequest="185"
                Aspect="AspectFit" />

            <Label
                Text="WattCount"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />


            <Button
                Text="START" 
                HorizontalOptions="Center" 
                Command="{Binding goToSpielstandPageCommand}"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
